<resources>
    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <!-- light application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#039BE5</item>
        <item name="colorPrimaryDark">#0277BD</item>
        <item name="colorAccent">#039BE5</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- dark application theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#546E7A</item>
        <item name="colorPrimaryDark">#37474F</item>
        <item name="colorAccent">#546E7A</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeHot" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFB300</item>
        <item name="colorPrimaryDark">#FF8F00</item>
        <item name="colorAccent">#FFB300</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

</resources>
